@page
@model CellPhoneShop.Web.Pages.Phone.IndexModel
@{
    ViewData["Title"] = "Phone Management";
}

<div class="container-fluid mt-4">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="card-title mb-0">Phone List</h2>
            @if (User.IsInRole("Admin"))
            {
                <a href="/Phone/Create" class="btn btn-light">
                    <i class="bi bi-plus-circle"></i> Add New Phone
                </a>
            }
        </div>
        <div class="card-body">
            <form method="get" asp-page="./Index" class="mb-4" novalidate>
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="SearchTerm" class="form-label">Search</label>
                            <input asp-for="SearchTerm" class="form-control" placeholder="Search phones..."/>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="BrandId" class="form-label">Brand</label>
                            <select asp-for="BrandId" class="form-select">
                                <option value="">All Brands</option>
                                @foreach (var brand in Model.Brands)
                                {
                                    <option value="@brand.BrandId">@brand.BrandName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="MinPrice" class="form-label">Min Price</label>
                            <input asp-for="MinPrice" class="form-control" type="number" min="0" step="1000000"/>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="MaxPrice" class="form-label">Max Price</label>
                            <input asp-for="MaxPrice" class="form-control" type="number" min="0" step="1000000"/>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Ram" class="form-label">RAM</label>
                            <input asp-for="Ram" class="form-control" placeholder="e.g. 8GB"/>
                        </div>
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Brand</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>RAM</th>
                            <th>Screen</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var phone in Model.Phones)
                        {
                            <tr>
                                <td>@phone.BrandName</td>
                                <td>@phone.PhoneName</td>
                                <td>@phone.BasePrice.ToString("C0")</td>
                                <td>@(phone.Ram ?? "N/A")</td>
                                <td>@(phone.Screen ?? "N/A")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/Phone/Details/@phone.PhoneId" class="btn btn-info btn-sm">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a href="/Phone/Edit/@phone.PhoneId" class="btn btn-warning btn-sm">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal@(phone.PhoneId)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </div>

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <!-- Delete Modal -->
                                        <div class="modal fade" id="deleteModal@(phone.PhoneId)" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirm Delete</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to delete @phone.PhoneName?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form method="post" asp-page-handler="Delete" asp-route-id="@phone.PhoneId" class="d-inline">
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted">
                            Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to @(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalItems)) of @Model.TotalItems items
                        </div>
                        <ul class="pagination mb-0">
                            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                <a class="page-link" href="@Model.GetPageUrl(Model.CurrentPage - 1)" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            @{
                                const int maxVisiblePages = 5;
                                var startPage = Math.Max(1, Model.CurrentPage - maxVisiblePages / 2);
                                var endPage = Math.Min(Model.TotalPages, startPage + maxVisiblePages - 1);
                                startPage = Math.Max(1, endPage - maxVisiblePages + 1);
                            }
                            @if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Model.GetPageUrl(1)">1</a>
                                </li>
                                @if (startPage > 2)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }
                            }
                            @for (var i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Model.GetPageUrl(i)">@i</a>
                                </li>
                            }
                            @if (endPage < Model.TotalPages)
                            {
                                @if (endPage < Model.TotalPages - 1)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }
                                <li class="page-item">
                                    <a class="page-link" href="@Model.GetPageUrl(Model.TotalPages)">@Model.TotalPages</a>
                                </li>
                            }
                            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                <a class="page-link" href="@Model.GetPageUrl(Model.CurrentPage + 1)" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}
