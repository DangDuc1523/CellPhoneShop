@page "{id:int}"
@using CellPhoneShop.Web.DTOs.Phone
@model CellPhoneShop.Web.Pages.Phone.EditModel
@{
    ViewData["Title"] = "Edit Phone";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h2 class="card-title mb-0">Edit Phone</h2>
                    <a href="/Phone" class="btn btn-light">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="Phone.PhoneId" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone.BrandId" class="form-label"></label>
                                    <select asp-for="Phone.BrandId" class="form-select" asp-items="Model.BrandList">
                                        <option value="">Select a brand</option>
                                    </select>
                                    <span asp-validation-for="Phone.BrandId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone.PhoneName" class="form-label"></label>
                                    <input asp-for="Phone.PhoneName" class="form-control" />
                                    <span asp-validation-for="Phone.PhoneName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone.BasePrice" class="form-label"></label>
                                    <input asp-for="Phone.BasePrice" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="Phone.BasePrice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone.Ram" class="form-label"></label>
                                    <input asp-for="Phone.Ram" class="form-control" placeholder="e.g. 8GB" />
                                    <span asp-validation-for="Phone.Ram" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone.Screen" class="form-label"></label>
                                    <input asp-for="Phone.Screen" class="form-control" placeholder="e.g. 6.7 inch OLED" />
                                    <span asp-validation-for="Phone.Screen" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone.Os" class="form-label"></label>
                                    <input asp-for="Phone.Os" class="form-control" placeholder="e.g. Android 13" />
                                    <span asp-validation-for="Phone.Os" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone.FrontCamera" class="form-label"></label>
                                    <input asp-for="Phone.FrontCamera" class="form-control" placeholder="e.g. 12MP" />
                                    <span asp-validation-for="Phone.FrontCamera" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone.RearCamera" class="form-label"></label>
                                    <input asp-for="Phone.RearCamera" class="form-control" placeholder="e.g. 48MP + 12MP Ultra Wide" />
                                    <span asp-validation-for="Phone.RearCamera" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone.Cpu" class="form-label"></label>
                                    <input asp-for="Phone.Cpu" class="form-control" placeholder="e.g. Snapdragon 8 Gen 2" />
                                    <span asp-validation-for="Phone.Cpu" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone.Battery" class="form-label"></label>
                                    <input asp-for="Phone.Battery" class="form-control" placeholder="e.g. 5000mAh" />
                                    <span asp-validation-for="Phone.Battery" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone.Description" class="form-label"></label>
                            <textarea asp-for="Phone.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Phone.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone.Other" class="form-label"></label>
                            <textarea asp-for="Phone.Other" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Phone.Other" class="text-danger"></span>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
