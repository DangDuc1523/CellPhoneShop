@page
@model CellPhoneShop.Web.Pages.Product.IndexModel
@{
    ViewData["Title"] = "Danh sách điện thoại";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container py-5">
    <h1 class="text-center mb-5">Điện thoại di động</h1>

    <div class="row g-4">
        @foreach (var phone in Model.Phones)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm hover-shadow">
                    <div class="text-center p-3">
                        <img src="@phone.ImageUrl" class="card-img-top" alt="@phone.PhoneName" style="height: 200px; object-fit: contain;">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-truncate">@phone.PhoneName</h5>
                        <p class="card-text text-danger fw-bold mb-2">@(phone.Price?.ToString("N0") ?? "Liên hệ") đ</p>
                        <p class="card-text small text-muted mb-0">
                            <i class="fas fa-microchip me-1"></i> RAM: @phone.Ram
                            <br/>
                            <i class="fas fa-hdd me-1"></i> ROM: @phone.Storage
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <div class="d-grid">
                            <a href="/Customer/Product/Details/@phone.PhoneId" class="btn btn-outline-primary">
                                <i class="fas fa-info-circle me-1"></i> Chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
.hover-shadow:hover {
    transform: translateY(-5px);
    box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    transition: all .3s ease;
}
.card {
    border: none;
    border-radius: 10px;
    overflow: hidden;
}
.card-img-top {
    transition: transform .3s ease;
}
.card:hover .card-img-top {
    transform: scale(1.05);
}
</style>
