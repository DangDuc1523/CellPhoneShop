@page "{id:int}"
@model CellPhoneShop.Web.Pages.Product.DetailsModel
@{
    ViewData["Title"] = Model.Phone?.PhoneName ?? "Chi tiết sản phẩm";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    .spec-icon {
        width: 40px;
        height: 40px;
        background: #f8f9fa;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
    }
    .product-section {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        padding: 25px;
        margin-bottom: 30px;
    }
    .price-tag {
        background: linear-gradient(45deg, #ff6b6b, #ff8787);
        color: white;
        padding: 10px 20px;
        border-radius: 10px;
        display: inline-block;
    }
    .spec-item {
        transition: transform 0.2s;
    }
    .spec-item:hover {
        transform: translateY(-5px);
    }
</style>

<div class="container py-5">
    @if (Model.Phone != null)
    {
        <div class="row g-4">
            <!-- Hình ảnh sản phẩm -->
            <div class="col-lg-5">
                <div class="product-section text-center">
                    <img src="@Model.Phone.ImageUrl" alt="@Model.Phone.PhoneName" 
                         class="img-fluid rounded" style="max-height:400px;object-fit:contain;" />
                    <div class="mt-4">
                        <span class="badge bg-primary me-2 p-2">
                            <i class="fas fa-building me-1"></i>
                            @Model.Phone.BrandName
                        </span>
                        <span class="badge bg-info text-dark p-2">
                            <i class="fas fa-palette me-1"></i>
                            @Model.Phone.Color
                        </span>
                    </div>
                </div>
            </div>
            
            <!-- Thông tin sản phẩm -->
            <div class="col-lg-7">
                <div class="product-section">
                    <h1 class="fw-bold mb-4">@Model.Phone.PhoneName</h1>
                    <div class="price-tag mb-4">
                        <h3 class="mb-0">
                            <i class="fas fa-tag me-2"></i>
                            @(Model.Phone.Price?.ToString("N0") ?? "Liên hệ") <span class="fs-6">VNĐ</span>
                        </h3>
                    </div>

                    <!-- Thông số kỹ thuật -->
                    <div class="row g-4 mt-2">
                        @if (!string.IsNullOrEmpty(Model.Phone.Screen))
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center spec-item">
                                    <div class="spec-icon">
                                        <i class="fas fa-mobile-alt fa-lg text-primary"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Màn hình</small>
                                        <strong>@Model.Phone.Screen</strong>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Phone.Ram))
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center spec-item">
                                    <div class="spec-icon">
                                        <i class="fas fa-memory fa-lg text-success"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">RAM</small>
                                        <strong>@Model.Phone.Ram</strong>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Phone.Storage))
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center spec-item">
                                    <div class="spec-icon">
                                        <i class="fas fa-hdd fa-lg text-info"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Bộ nhớ trong</small>
                                        <strong>@Model.Phone.Storage</strong>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Phone.Battery))
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center spec-item">
                                    <div class="spec-icon">
                                        <i class="fas fa-battery-full fa-lg text-warning"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Pin</small>
                                        <strong>@Model.Phone.Battery</strong>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Mô tả sản phẩm -->
                    @if (!string.IsNullOrEmpty(Model.Phone.Description))
                    {
                        <div class="mt-5">
                            <h4 class="fw-bold mb-3">
                                <i class="fas fa-info-circle me-2"></i>
                                Mô tả sản phẩm
                            </h4>
                            <div class="p-4 bg-light rounded">
                                @Model.Phone.Description
                            </div>
                        </div>
                    }

                    <!-- Actions Buttons -->
                    <div class="mt-5 d-flex gap-2 flex-wrap">
                        <button class="btn btn-primary btn-lg" style="width: 200px;" id="addToCartBtn">
                            <i class="fas fa-shopping-cart me-2"></i>
                            Thêm vào giỏ
                        </button>
                        <button class="btn btn-info btn-lg" onclick="addToCompare(@Model.Phone.PhoneId)" id="compareBtn">
                            <i class="fas fa-balance-scale me-2"></i>
                            So sánh
                        </button>
                        <a href="/Product" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>
                            Quay lại
                        </a>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

<!-- Modal So sánh sản phẩm -->
<div class="modal fade" id="compareModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">So sánh sản phẩm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table" id="compareTable">
                        <thead>
                            <tr>
                                <th>Thông số</th>
                                <th id="product1">@Model.Phone.PhoneName</th>
                                <th id="product2">Chọn sản phẩm</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Giá</td>
                                <td>@(Model.Phone.Price?.ToString("N0") ?? "Liên hệ") VNĐ</td>
                                <td class="compare-price">-</td>
                            </tr>
                            <tr>
                                <td>Màn hình</td>
                                <td>@(Model.Phone.Screen ?? "-")</td>
                                <td class="compare-screen">-</td>
                            </tr>
                            <tr>
                                <td>RAM</td>
                                <td>@(Model.Phone.Ram ?? "-")</td>
                                <td class="compare-ram">-</td>
                            </tr>
                            <tr>
                                <td>Bộ nhớ trong</td>
                                <td>@(Model.Phone.Storage ?? "-")</td>
                                <td class="compare-storage">-</td>
                            </tr>
                            <tr>
                                <td>Pin</td>
                                <td>@(Model.Phone.Battery ?? "-")</td>
                                <td class="compare-battery">-</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="text-center mt-3">
                    <select class="form-select form-select-lg mb-3" id="compareSelect" 
                            style="max-width: 400px; margin: 0 auto;">
                        <option value="">Chọn sản phẩm để so sánh...</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
            <h3>Không tìm thấy sản phẩm</h3>
            <p class="text-muted">Sản phẩm này có thể đã bị xóa hoặc không tồn tại.</p>
            <a href="/Product" class="btn btn-primary mt-3">
                <i class="fas fa-home me-2"></i>
                Về trang sản phẩm
            </a>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Khởi tạo biến
        let compareModal;
        let phones = [];
        const currentPhoneId = @(Model?.Phone?.PhoneId ?? 0);

        // Khi trang đã load
        document.addEventListener('DOMContentLoaded', async function () {
            compareModal = new bootstrap.Modal(document.getElementById('compareModal'));
            
            // Load danh sách điện thoại cho dropdown
            try {
                const response = await fetch('/api/Phone');
                if (response.ok) {
                    phones = await response.json();
                    const select = document.getElementById('compareSelect');
                    
                    phones.filter(p => p.phoneId !== currentPhoneId).forEach(phone => {
                        const option = document.createElement('option');
                        option.value = phone.phoneId;
                        option.textContent = phone.phoneName;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Error loading phones:', error);
            }

            // Xử lý sự kiện khi chọn sản phẩm để so sánh
            document.getElementById('compareSelect').addEventListener('change', async function(e) {
                const selectedId = e.target.value;
                if (!selectedId) return;

                try {
                    const response = await fetch(`/api/Phone/${selectedId}`);
                    if (response.ok) {
                        const phone = await response.json();
                        updateCompareTable(phone);
                    }
                } catch (error) {
                    console.error('Error loading phone details:', error);
                }
            });
        });

        // Hiển thị modal so sánh
        function addToCompare(phoneId) {
            compareModal.show();
        }

        // Cập nhật bảng so sánh
        function updateCompareTable(phone) {
            document.getElementById('product2').textContent = phone.phoneName || '-';
            document.querySelector('.compare-price').textContent = phone.price ? 
                `${phone.price.toLocaleString('vi-VN')} VNĐ` : 'Liên hệ';
            document.querySelector('.compare-screen').textContent = phone.screen || '-';
            document.querySelector('.compare-ram').textContent = phone.ram || '-';
            document.querySelector('.compare-storage').textContent = phone.storage || '-';
            document.querySelector('.compare-battery').textContent = phone.battery || '-';
        }
    </script>
}