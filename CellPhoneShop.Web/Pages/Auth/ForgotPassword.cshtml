@page
@model CellPhoneShop.Web.Pages.Auth.ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_AuthLayout";
}
<form method="post" class="w-50 mx-auto border p-4 rounded shadow">
    <div class="form-group mb-3">
        <label for="email">Email:</label>
        <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Gửi mã OTP</button>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success mt-3">@Model.Message</div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
