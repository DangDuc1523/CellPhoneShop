@page "{email?}"
@model CellPhoneShop.Web.Pages.Auth.ResetPasswordModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "_AuthLayout";
}

<h2 class="text-center text-primary mb-4">Đặt lại mật khẩu</h2>

<form method="post" class="w-50 mx-auto border p-4 rounded shadow">
    <input type="hidden" asp-for="Email" />

    <div class="form-group mb-3">
        <label for="NewPassword">Mật khẩu mới:</label>
        <input asp-for="NewPassword" type="password" class="form-control" placeholder="Nhập mật khẩu mới" required />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
        <label for="NewPassword">Nhập lại mật khẩu:</label>
        <input asp-for="AgainPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu mới" required />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Cập nhật mật khẩu</button>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(e => e.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }
</form>

@if (TempData["Success"] != null)
{
    <script>
        alert('Cập nhật mật khẩu thành công!');
        window.location.href = '/Auth/Logout'; // hoặc "/Auth/Login"
    </script>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
