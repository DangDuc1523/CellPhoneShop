@page "{id:int}"
@model CellPhoneShop.Web.Pages.Admin.Phone.EditModel
@{
    ViewData["Title"] = "Edit Phone";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<div class="edit-container">
    <div class="edit-wrapper">
        <div class="page-header">
            <h1 class="page-title">Edit Phone</h1>
            <p class="page-subtitle">Update phone information</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
            </div>
        }

        <form method="post">
            <input type="hidden" asp-for="Phone.PhoneId" />
            
            <div class="form-group">
                <label asp-for="Phone.PhoneName" class="form-label">
                    <i class="fas fa-mobile-alt"></i> Phone Name
                </label>
                <input asp-for="Phone.PhoneName" class="form-control" placeholder="Enter phone name">
                <span asp-validation-for="Phone.PhoneName" class="invalid-feedback"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone.BrandId" class="form-label">
                    <i class="fas fa-tag"></i> Brand
                </label>
                <select asp-for="Phone.BrandId" asp-items="Model.BrandList" class="form-control">
                    <option value="">Select a brand</option>
                </select>
                <span asp-validation-for="Phone.BrandId" class="invalid-feedback"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone.BasePrice" class="form-label">
                    <i class="fas fa-dollar-sign"></i> Base Price
                </label>
                <input asp-for="Phone.BasePrice" type="number" step="0.01" class="form-control" placeholder="Enter base price">
                <span asp-validation-for="Phone.BasePrice" class="invalid-feedback"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone.Description" class="form-label">
                    <i class="fas fa-align-left"></i> Description
                </label>
                <textarea asp-for="Phone.Description" class="form-control" rows="4" placeholder="Enter phone description"></textarea>
                <span asp-validation-for="Phone.Description" class="invalid-feedback"></span>
            </div>

            @if (Model.AvailableAttributes.Any())
            {
                <div class="mb-3">
                    <label class="form-label">Phone Attributes</label>
                    <div class="row">
                        @for (int i = 0; i < Model.AvailableAttributes.Count; i++)
                        {
                            var attr = Model.AvailableAttributes[i];
                            var mapping = Model.Phone.AttributeMappings?.FirstOrDefault(m => m.AttributeId == attr.AttributeId);
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="attr_@attr.AttributeId" class="form-label">@attr.Name</label>
                                    <input type="text" name="Phone.AttributeMappings[@i].Value" class="form-control" id="attr_@attr.AttributeId"
                                           value="@(mapping?.Value ?? "")" placeholder="Nhập giá trị..." />
                                    <input type="hidden" name="Phone.AttributeMappings[@i].AttributeId" value="@attr.AttributeId" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <div class="form-actions">
                <a href="/Admin/Phone/Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Update Phone
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
} 