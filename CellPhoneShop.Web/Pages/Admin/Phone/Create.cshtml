@page
@model CellPhoneShop.Web.Pages.Admin.Phone.CreateModel
@{
    ViewData["Title"] = "Create Phone";
    Layout = "_AdminLayout";
    var isAdmin = User.IsInRole("Admin");
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">Create Phone</h1>
                <a href="/Admin/Phone" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Phone Information</h5>
        </div>
        <div class="card-body">
            @if (!isAdmin)
            {
                <div class="alert alert-danger mt-4">Bạn không có quyền truy cập chức năng này.</div>
            }
            else
            {
                <form method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Phone.PhoneName" class="form-label">Phone Name *</label>
                                <input asp-for="Phone.PhoneName" class="form-control" placeholder="Enter phone name" />
                                <span asp-validation-for="Phone.PhoneName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Phone.BrandId" class="form-label">Brand *</label>
                                <select asp-for="Phone.BrandId" asp-items="Model.BrandList" class="form-control">
                                    <option value="">Select a brand</option>
                                </select>
                                <span asp-validation-for="Phone.BrandId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Phone.BasePrice" class="form-label">Base Price *</label>
                                <input asp-for="Phone.BasePrice" type="number" step="0.01" class="form-control" placeholder="Enter base price" />
                                <span asp-validation-for="Phone.BasePrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Phone.Description" class="form-label">Description</label>
                                <textarea asp-for="Phone.Description" class="form-control" rows="3" placeholder="Enter phone description"></textarea>
                                <span asp-validation-for="Phone.Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    @if (Model.AvailableAttributes.Any())
                    {
                        <div class="mb-3">
                            <label class="form-label">Phone Attributes</label>
                            <div class="row">
                                @for (int i = 0; i < Model.AvailableAttributes.Count; i++)
                                {
                                    var attr = Model.AvailableAttributes[i];
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="attr_@attr.AttributeId" class="form-label">@attr.Name</label>
                                            <input type="text" name="Phone.AttributeMappings[@i].Value" class="form-control" id="attr_@attr.AttributeId" placeholder="Nhập giá trị..." />
                                            <input type="hidden" name="Phone.AttributeMappings[@i].AttributeId" value="@attr.AttributeId" />
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="d-flex justify-content-end gap-2">
                        <a href="/Admin/Phone" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Create Phone
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 