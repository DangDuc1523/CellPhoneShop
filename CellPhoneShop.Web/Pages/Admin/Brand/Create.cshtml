@page
@model CellPhoneShop.Web.Pages.Admin.Brand.CreateModel
@{
    ViewData["Title"] = "Create Brand";
    Layout = "_AdminLayout";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">Create Brand</h1>
                <a href="/Admin/Brand" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Brand Information</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Brand.BrandName" class="form-label">Brand Name *</label>
                            <input asp-for="Brand.BrandName" class="form-control" />
                            <span asp-validation-for="Brand.BrandName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Brand.Description" class="form-label">Description</label>
                            <textarea asp-for="Brand.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Brand.Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a href="/Admin/Brand" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Create Brand
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 