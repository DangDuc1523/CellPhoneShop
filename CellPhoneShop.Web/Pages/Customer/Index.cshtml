@page
@model CellPhoneShop.Web.Pages.Customer.IndexModel
@{
    ViewData["Title"] = "Home";
    Layout = "_CustomerLayout";
}

<!-- Hero Section with Carousel -->
<section class="hero-section">
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" style="background-image: url('/images/banner/banner1.jpg');">
                <div class="carousel-caption d-block">
                    <h1 data-aos="fade-up" data-aos-delay="100">Discover Your Next Smartphone</h1>
                    <p data-aos="fade-up" data-aos-delay="200">Explore the latest models and find the perfect phone for you.</p>
                    <a href="/Products" class="btn btn-primary btn-lg me-3" data-aos="fade-up" data-aos-delay="300">Shop Now</a>
                    <a href="/Brands" class="btn btn-outline-light btn-lg" data-aos="fade-up" data-aos-delay="400">View Brands</a>
                </div>
            </div>
            <div class="carousel-item" style="background-image: url('/images/banner/banner2.jpg');">
                <div class="carousel-caption d-block">
                    <h1 data-aos="fade-up" data-aos-delay="100">Unbeatable Deals on Top Brands</h1>
                    <p data-aos="fade-up" data-aos-delay="200">Don't miss out on our limited-time offers and exclusive discounts.</p>
                    <a href="/Products" class="btn btn-primary btn-lg me-3" data-aos="fade-up" data-aos-delay="300">Shop Deals</a>
                    <a href="/Contact" class="btn btn-outline-light btn-lg" data-aos="fade-up" data-aos-delay="400">Contact Us</a>
                </div>
            </div>
            <div class="carousel-item" style="background-image: url('/images/banner/banner3.jpg');">
                <div class="carousel-caption d-block">
                    <h1 data-aos="fade-up" data-aos-delay="100">Quality Phones, Exceptional Service</h1>
                    <p data-aos="fade-up" data-aos-delay="200">Experience seamless shopping and reliable customer support.</p>
                    <a href="/About" class="btn btn-primary btn-lg me-3" data-aos="fade-up" data-aos-delay="300">Learn More</a>
                    <a href="/Products" class="btn btn-outline-light btn-lg" data-aos="fade-up" data-aos-delay="400">Explore Phones</a>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>

<!-- Featured Products -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5" data-aos="fade-up">Featured Products</h2>
        <div class="row">
            @foreach (var phone in Model.FeaturedPhones)
            {
                <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="card product-card h-100">
                        <img src="@phone.ImageUrl" class="card-img-top" alt="@phone.PhoneName" onerror="this.onerror=null;this.src='/images/placeholder-phone.jpg';">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@phone.PhoneName</h5>
                            <p class="brand text-muted">@phone.BrandName</p>
                            <p class="price">$@phone.BasePrice.ToString("N0")</p>
                            <div class="mt-auto">
                                <a href="/Customer/Product/Details/@phone.PhoneId" class="btn btn-primary btn-sm w-100 mb-2">Xem chi tiáº¿t</a>
                                <button class="btn btn-outline-primary btn-sm w-100 add-to-cart-btn"
                                        data-product-id="@phone.PhoneId"
                                        data-product-name="@phone.PhoneName">
                                    Add to Cart
                                </button>
                                <button class="btn btn-outline-danger btn-sm w-100 add-to-wishlist-btn mt-2"
                                        data-product-id="@phone.PhoneId">
                                    <i class="bi bi-heart"></i> Add to Wishlist
                                </button>
                                <button class="btn btn-secondary btn-sm w-100 quick-view-btn mt-2"
                                        data-bs-toggle="modal"
                                        data-bs-target="#productQuickViewModal"
                                        data-product-id="@phone.PhoneId">
                                    <i class="bi bi-eye"></i> Quick View
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4" data-aos="fade-up" data-aos-delay="200">
            <a href="/Products" class="btn btn-primary btn-lg">View All Products</a>
        </div>
    </div>
</section>

<!-- Popular Brands -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5" data-aos="fade-up">Popular Brands</h2>
        <div class="row justify-content-center">
            @foreach (var brand in Model.PopularBrands)
            {
                <div class="col-lg-2 col-md-3 col-4 mb-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="card brand-card h-100 text-center py-4">
                        <div class="card-body d-flex flex-column align-items-center justify-content-center">
                            <img src="/images/Brand/@(brand.BrandName.ToLower()).png" alt="@brand.BrandName Logo" class="img-fluid mb-3" onerror="this.onerror=null;this.src='/images/placeholder-brand.png';">
                            <h6 class="card-title">@brand.BrandName</h6>
                            <a href="/Products?brand=@brand.BrandId" class="btn btn-outline-primary btn-sm mt-auto">View Phones</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Why Choose Us -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5" data-aos="fade-up">Why Choose Us?</h2>
        <div class="row text-center">
            <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="100">
                <i class="bi bi-shield-check feature-icon"></i>
                <h3>Quality Guaranteed</h3>
                <p>All our products are rigorously tested to ensure the highest quality and durability.</p>
            </div>
            <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="200">
                <i class="bi bi-truck feature-icon"></i>
                <h3>Fast & Free Shipping</h3>
                <p>Enjoy quick and reliable delivery right to your doorstep, on us!</p>
            </div>
            <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="300">
                <i class="bi bi-headphones feature-icon"></i>
                <h3>24/7 Customer Support</h3>
                <p>Our dedicated support team is always ready to assist you with any queries.</p>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Subscription -->
<section class="py-5 newsletter-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg" data-aos="zoom-in">
                    <div class="card-body text-center">
                        <h3 class="mb-3">Stay Updated with Our Latest Offers!</h3>
                        <p class="text-white-50 mb-4">Subscribe to our newsletter and get exclusive deals and product updates directly in your inbox.</p>
                        <form id="newsletterForm" class="d-flex justify-content-center">
                            <div class="input-group mb-3" style="max-width: 500px;">
                                <input type="email" class="form-control form-control-lg" placeholder="Enter your email" required>
                                <button type="submit" class="btn btn-primary btn-lg">Subscribe</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Product Quick View Modal -->
<div class="modal fade" id="productQuickViewModal" tabindex="-1" aria-labelledby="productQuickViewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productQuickViewModalLabel">Product Quick View</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6 text-center">
                        <img id="quickViewProductImage" src="/images/placeholder-phone.jpg" alt="Product Image" class="img-fluid rounded shadow-sm mb-3">
                        <div id="quickViewThumbnails" class="d-flex justify-content-center mt-2">
                            <!-- Thumbnails will be loaded here by JS -->
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h3 id="quickViewProductName">Product Name</h3>
                        <p class="text-muted mb-2">Brand: <span id="quickViewProductBrand">Brand</span></p>
                        <p class="mb-3">Color: <span id="quickViewProductColor">Color</span></p>
                        <h4 class="text-primary mb-3">$<span id="quickViewProductPrice">0.00</span></h4>
                        <p id="quickViewProductDescription" class="text-muted small">Short description of the product.</p>
                        <hr>
                        <ul class="list-unstyled small">
                            <li><strong>Screen:</strong> <span id="quickViewProductScreen"></span></li>
                            <li><strong>OS:</strong> <span id="quickViewProductOS"></span></li>
                            <li><strong>Front Camera:</strong> <span id="quickViewProductFrontCamera"></span></li>
                            <li><strong>Rear Camera:</strong> <span id="quickViewProductRearCamera"></span></li>
                            <li><strong>CPU:</strong> <span id="quickViewProductCPU"></span></li>
                            <li><strong>RAM:</strong> <span id="quickViewProductRAM"></span></li>
                            <li><strong>Battery:</strong> <span id="quickViewProductBattery"></span></li>
                            <li><strong>SIM:</strong> <span id="quickViewProductSIM"></span></li>
                            <li><strong>Other:</strong> <span id="quickViewProductOther"></span></li>
                        </ul>
                        <div class="d-grid gap-2 mt-4">
                            <button class="btn btn-primary add-to-cart-from-quickview" data-product-id="">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                            <a href="#" id="quickViewDetailsLink" class="btn btn-outline-secondary">
                                <i class="bi bi-info-circle"></i> View Full Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/aos.js"></script>
    <script>
        AOS.init();
    </script>
} 