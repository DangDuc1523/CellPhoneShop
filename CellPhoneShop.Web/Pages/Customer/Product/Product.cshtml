@page
@model CellPhoneShop.Web.Pages.Customer.Product.ProductModel
@{
    ViewData["Title"] = "Product Page";
    Layout = "_CustomerLayout";
}

<style>
    /* Custom styles for the Product page, if any, will be moved here from style.css later */
    .product-list-section .product-card {
        margin-bottom: 25px;
    }

        .product-list-section .product-card .card-body {
            padding: 1rem;
        }

        .product-list-section .product-card .card-title {
            font-size: 1.1rem;
            margin-bottom: 0.3rem;
        }

        .product-list-section .product-card .price {
            font-size: 1.1rem;
        }

    .brand-item img {
        max-width: 80px;
        max-height: 80px;
        object-fit: contain;
        margin-bottom: 10px;
    }

    .brand-item h3 {
        font-size: 1rem;
        font-weight: 600;
        color: #333;
    }

    /* Search form specific styles from Product.cshtml */
    #searchForm {
        background: #f4f4fa;
        border: 2px solid #6c63ff;
        border-radius: 22px;
        padding: 2px 10px;
        min-width: 260px;
        max-width: 340px;
        height: 40px;
        position: relative;
    }

    #searchInput {
        background: transparent;
        font-size: 1rem;
        box-shadow: none;
        outline: none;
        height: 36px;
        padding: 0 8px;
    }

    #searchForm .btn {
        background: #6c63ff;
        color: #fff;
        border-radius: 50%;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: 6px;
        padding: 0;
    }

    #suggestionBox {
        position: absolute;
        top: 44px;
        left: 0;
        width: 100%;
        background: #fff;
        border: 1.5px solid #6c63ff;
        border-radius: 0 0 16px 16px;
        z-index: 1000;
        display: none;
        max-height: 220px;
        overflow-y: auto;
    }
</style>

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"><a href="/">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Shop</strong></div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="d-flex justify-content-end">
        <a href="/Customer/Home/Home" class="btn btn-outline-secondary mb-3" style="border-radius:12px;font-weight:500;">
            &larr; Quay lại trang chủ
        </a>
    </div>
</div>

<div class="site-section product-list-section">
    <div class="container">

        <div class="row mb-3">
            <div class="col-12 d-flex justify-content-start">
                <form id="searchForm" class="d-flex align-items-center">
                    <input id="searchInput" type="text" class="form-control border-0" placeholder="Tìm kiếm sản phẩm...">
                    <button class="btn" type="submit">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                    <div id="suggestionBox"></div>
                </form>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-md-9 order-2">

                <div class="row">
                    <div class="col-md-12 mb-5">
                        <div class="float-md-left mb-4"><h2 class="text-black h5">Shop All</h2></div>
                        <div class="d-flex">
                            <div class="dropdown mr-1 ml-md-auto">
                                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" id="dropdownMenuOffset" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Latest
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuOffset">
                                    <a class="dropdown-item" href="#">Men</a>
                                    <a class="dropdown-item" href="#">Women</a>
                                    <a class="dropdown-item" href="#">Children</a>
                                </div>
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" id="dropdownMenuReference" data-bs-toggle="dropdown">Reference</button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuReference">
                                    <a class="dropdown-item" href="#">Relevance</a>
                                    <a class="dropdown-item" href="#">Name, A to Z</a>
                                    <a class="dropdown-item" href="#">Name, Z to A</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Price, low to high</a>
                                    <a class="dropdown-item" href="#">Price, high to low</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-5">
                    @if (Model.Products != null && Model.Products.Count > 0)
                    {
                        foreach (var p in Model.Products)
                        {
                            <div class="col-12 col-sm-6 col-lg-4 mb-4 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
                                <div class="card product-card shadow-sm border-0 w-100 h-100" data-price="@p.BasePrice">
                                    <img src="/images/placeholder-phone.jpg" class="card-img-top" alt="@p.PhoneName" onerror="this.onerror=null;this.src='/images/placeholder-phone.jpg';" />
                                    <div class="card-body d-flex flex-column justify-content-between">
                                        <div>
                                            <h5 class="card-title">@p.PhoneName</h5>
                                            <p class="brand text-muted">@p.BrandName</p>
                                            <p class="price">@string.Format("{0:N0}₫", p.BasePrice)</p>
                                            <p class="card-text text-muted" style="font-size:0.9rem;min-height:30px;overflow:hidden;">@p.Description</p>
                                        </div>
                                        <div class="mt-auto">
                                            <a href="/Customer/Product/Details/@p.PhoneId" class="btn btn-primary btn-sm w-100 mb-2">Xem chi tiết</a>
                                            <button class="btn btn-outline-primary btn-sm w-100 add-to-cart-btn"
                                                    data-product-id="@p.PhoneId"
                                                    data-product-name="@p.PhoneName">
                                                Add to Cart
                                            </button>
                                            <button class="btn btn-outline-danger btn-sm w-100 add-to-wishlist-btn mt-2"
                                                    data-product-id="@p.PhoneId">
                                                <i class="bi bi-heart"></i> Add to Wishlist
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-center text-muted py-5">Không có sản phẩm nào.</div>
                    }
                </div>
                <div class="row" data-aos="fade-up">
                    <div class="col-md-12 text-center">
                        <div class="site-block-27">
                            <ul>
                                <li><a href="#">&lt;</a></li>
                                <li class="active"><span>1</span></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li><a href="#">&gt;</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 order-1 mb-5 mb-md-0">
                <div class="border p-4 rounded mb-4">
                    <h3 class="mb-3 h6 text-uppercase text-black d-block">Brands</h3>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1"><a href="#" class="d-flex"><span>Apple</span> <span class="text-black ml-auto">(150)</span></a></li>
                        <li class="mb-1"><a href="#" class="d-flex"><span>Samsung</span> <span class="text-black ml-auto">(120)</span></a></li>
                        <li class="mb-1"><a href="#" class="d-flex"><span>Xiaomi</span> <span class="text-black ml-auto">(90)</span></a></li>
                        <li class="mb-1"><a href="#" class="d-flex"><span>Oppo</span> <span class="text-black ml-auto">(75)</span></a></li>
                        <li class="mb-1"><a href="#" class="d-flex"><span>Vivo</span> <span class="text-black ml-auto">(60)</span></a></li>
                    </ul>
                </div>

                <div class="border p-4 rounded mb-4">
                    <div class="mb-4">
                        <h3 class="mb-3 h6 text-uppercase text-black d-block">Filter by Price</h3>
                        <div id="slider-range" class="border-primary"></div>
                        <input type="text" name="text" id="amount" class="form-control border-0 pl-0 bg-white" disabled="" />
                    </div>

                    <div class="mb-4">
                        <h3 class="mb-3 h6 text-uppercase text-black d-block">Size</h3>
                        <label for="s_sm" class="d-flex">
                            <input type="checkbox" id="s_sm" class="mr-2 mt-1"> <span class="text-black">Small (2,319)</span>
                        </label>
                        <label for="s_md" class="d-flex">
                            <input type="checkbox" id="s_md" class="mr-2 mt-1"> <span class="text-black">Medium (1,282)</span>
                        </label>
                        <label for="s_lg" class="d-flex">
                            <input type="checkbox" id="s_lg" class="mr-2 mt-1"> <span class="text-black">Large (1,392)</span>
                        </label>
                    </div>

                    <div class="mb-4">
                        <h3 class="mb-3 h6 text-uppercase text-black d-block">Color</h3>
                        <a href="#" class="d-flex color-item align-items-center">
                            <span class="bg-danger color d-inline-block rounded-circle mr-2"></span> <span class="text-black">Red (2,429)</span>
                        </a>
                        <a href="#" class="d-flex color-item align-items-center">
                            <span class="bg-success color d-inline-block rounded-circle mr-2"></span> <span class="text-black">Green (2,298)</span>
                        </a>
                        <a href="#" class="d-flex color-item align-items-center">
                            <span class="bg-info color d-inline-block rounded-circle mr-2"></span> <span class="text-black">Blue (1,075)</span>
                        </a>
                        <a href="#" class="d-flex color-item align-items-center">
                            <span class="bg-primary color d-inline-block rounded-circle mr-2"></span> <span class="text-black">Purple (1,075)</span>
                        </a>
                    </div>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="site-section site-blocks-2">
                    <div class="row justify-content-center text-center mb-5">
                        <div class="col-md-7 site-section-heading pt-4">
                            <h2>Brand</h2>
                        </div>
                    </div>
                    <div class="row justify-content-center text-center">
                        <div class="col-sm-6 col-md-4 col-lg-2 mb-4">
                            <a href="#" class="brand-item">
                                <img src="~/images/Brand/Samsung.png" alt="Samsung">
                                <h3>Samsung</h3>
                            </a>
                        </div>
                        <div class="col-sm-6 col-md-4 col-lg-2 mb-4">
                            <a href="#" class="brand-item">
                                <img src="~/images/Brand/Vivo.jpg" alt="Vivo">
                                <h3>Vivo</h3>
                            </a>
                        </div>
                        <div class="col-sm-6 col-md-4 col-lg-2 mb-4">
                            <a href="#" class="brand-item">
                                <img src="~/images/Brand/apple.png" alt="Apple">
                                <h3>Apple</h3>
                            </a>
                        </div>
                        <div class="col-sm-6 col-md-4 col-lg-2 mb-4">
                            <a href="#" class="brand-item">
                                <img src="~/images/Brand/Xiaomi.jpg" alt="Xiaomi">
                                <h3>Xiaomi</h3>
                            </a>
                        </div>
                        <div class="col-sm-6 col-md-4 col-lg-2 mb-4">
                            <a href="#" class="brand-item">
                                <img src="~/images/Brand/Oppo.jpg" alt="Oppo">
                                <h3>Oppo</h3>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>