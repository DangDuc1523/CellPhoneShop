<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CellPhone Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <div class="min-h-screen flex flex-col">
        <nav class="bg-white shadow-sm">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center h-16">
                    <div class="flex items-center gap-4">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="../Profile/Profile"><img src="/images/profile.png" alt="Profile" style="width:42px;height:42px;"></a>
                        }
                    </div>
                    <div class="flex items-center gap-4">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span class="text-sm text-gray-700">Welcome, @User.Identity.Name!</span>
                            <a href="/Auth/Logout" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700">
                                Logout
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>

        <main role="main" class="flex-grow">
            @RenderBody()
        </main>

        <footer class="bg-white">
            <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
                <p class="text-center text-gray-500 text-sm">
                    &copy; @DateTime.Now.Year - CellPhone Shop - <a href="/privacy" class="text-indigo-600 hover:text-indigo-500">Privacy</a>
                </p>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <style>
        .layout-search-bar {
            background: #f4f4fa;
            border: 2px solid #6c63ff;
            border-radius: 24px;
            box-shadow: 0 2px 8px rgba(108,99,255,0.06);
            padding: 2px 10px;
            transition: box-shadow 0.2s, border 0.2s;
        }
        .layout-search-bar:focus-within {
            box-shadow: 0 4px 16px rgba(108,99,255,0.13);
            border: 2px solid #574fd6;
        }
        .layout-search-input {
            border: none;
            outline: none;
            box-shadow: none;
            background: #f4f4fa;
            font-size: 1rem;
            flex: 1;
            padding: 4px 8px;
            color: #222;
        }
        .layout-search-input::placeholder {
            color: #555a7b;
            opacity: 1;
        }
        .layout-search-btn {
            background: #6c63ff;
            color: #fff;
            border: none;
            border-radius: 50%;
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1rem;
            margin-left: 4px;
            transition: background 0.2s;
        }
        .layout-search-btn:hover {
            background: #574fd6;
        }
    </style>
</body>
</html>